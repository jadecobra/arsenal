get_helper_file() {
    local helper_path=/usr/local/bin/helper
    cat $helper_path || sudo curl https://raw.githubusercontent.com/jadecobra/arsenal/main/helper -o $helper_path
    source $helper_path
}

tf() {
    ~/bin/terraform fmt -recursive
    ~/bin/terraform "$@"
}

plan() {
    tf fmt -recursive ../../..
    mergeMain
    tf plan -lock=false
}

initPlan() {
    tf version
    tf init
    plan
}

terraform() {
    tf "$@"
}

get_helper_file
tfswitch